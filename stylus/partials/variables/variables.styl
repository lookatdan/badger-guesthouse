// font-size variables
$ratio--sml = 0.7
$ratio--med = 1.18
$ratio--lrg = 1.24

$fz--base = .8rem

// line height variables
$lh--heading = 1
$lh--body    = 1.2

// line-length variable, edit this to suit the typeface chosen
$ll = 74


// letter-spacing variable, edit this to suit the typeface chosen
$ls = 0 //-0.03em

// spacing variables
$sp = ($fz--base * $lh--body)

$sp--quadruple           = ($sp * 4)
$sp--triple              = ($sp * 3)
$sp--double              = ($sp * 2)
$sp--plus-three-quarters = ($sp * 1.75)
$sp--plus-two-thirds     = ($sp * 1.666)
$sp--plus-half           = ($sp * 1.5)
$sp--plus-third          = ($sp * 1.333)
$sp--plus-quarter        = ($sp * 1.25)

$sp--three-quarters      = ($sp * .75)
$sp--two-thirds          = ($sp * .666)
$sp--half                = ($sp / 2)
$sp--third               = ($sp / 3)
$sp--quarter             = ($sp / 4)
$sp--fifth               = ($sp / 5)
$sp--sixth               = ($sp / 6)
$sp--eighth              = ($sp / 8)
$sp--tenth               = ($sp / 10)

// global border-radius variable
$bdrs = 2px

// global container width variable
$container = 1520px

// transition duration
$trans-duration-med = 0.5s
